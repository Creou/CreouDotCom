@model SimpleBlogger.Mvc.BlogPost
@{
    ViewBag.Title = String.Format("Blog | {0}", Model.Title);
    ViewBag.MenuPage = CreouDotCom.ViewModels.MenuPage.Other;
}
<div class="columnContent">
    <div class="contentHeader">
        <h1>
            @Model.Title</h1>
    </div>
    <div id="blogContent">
    @Html.Raw(Model.PostHtml)
    </div>
</div>