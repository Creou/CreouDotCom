@model CreouDotCom.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
    ViewBag.MenuPage = CreouDotCom.ViewModels.MenuPage.Contact;
}

<div class="formContainer">
        @if (ViewBag.MessageSubmitted)
        {
            if (ViewBag.Success)
            {
                <p>
                    You message has been sent.
                </p>
                <p>
                    We will get back to you as soon as possible.
                </p>
                <p>
                    (If you don't receive a reply within 48 hours, please remember to check your spam
                    filter)
                </p>
            }
            else
            {
                <p class="errorMessage">
                    Oh dear...
                </p>
                <p>
                    We're very sorry. Something seems to have gone wrong while sending your message.
                </p>
                <p>
                    While we try to fix the problem you can contact us using details on the right.
                </p>
                if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p class="errorMessage">@ViewBag.ErrorMessage</p>
                }
            }
        }
        else
        {
            using (Html.BeginForm(MVC.Contact.Contact()))
            {
                <div class="outerFormTitle">
                    <div class="formTitle">
                        Send a message
                    </div>
                    <div class="clearLeft">
                    </div>
                </div>
                @Html.ValidationSummary(true)
                @Html.EditorForModel()
                <div class="pressableButtonContainer">
                    <div class="pressableButtonInner">
                        <input class="pressableButton" type="submit" value="send" />
                    </div>
                </div>
            }
        }
    </div>

@section SideBar
{
    <div class="formContainer">
        <div class="outerFormTitle">
            <div class="formTitle">
                Contact Details
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="contactDetails">
            <h1>
                Email
            </h1>
            @Html.Partial("Email")
            <h1>
                Tel
            </h1>
            @Html.Partial("Telephone")
            <h1>
                Online
            </h1>
            <ul class="contactOnline">
                <li>
                    <a title="See my profile on Twitter" href="http://twitter.com/Creou">
                        <img src="@Url.Content("/content/contact/TwitterLogoSmall.png")" height="31" width="31" alt="Twitter profile" />
                    </a>
                </li>
                <li>
                    <a title="See my profile on Linked In" href="http://uk.linkedin.com/in/simonpstevens">
                        <img src="@Url.Content("/content/contact/LinkedInLogoSmall.png")" height="31" width="31" alt="Linked In profile" />
                    </a>
                </li>
            </ul>
            <div class="clear">
            </div>
            <h1>
                Address
            </h1>
            @Html.Partial("Address")
            <div class="clear">
            </div>
        </div>
    </div>

}
